<resources>

    <style name="AppTheme" parent="AppBaseTheme">

    </style>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/light_blue_500</item>
        <item name="colorPrimaryDark">@color/light_blue_700</item>
        <item name="colorAccent">@color/lime_A200</item>
        <!--返回键样式-->
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
    </style>

    <style name="setting" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/light_blue_500</item>
        <item name="android:focusable">false</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textColorSecondary">#ffffff</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:windowNoTitle">true</item>  <!-- 用来设定是否显示标题  -->
    </style>


    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="publicloadingProgressStyle">
        <item name="android:maxWidth">108dip</item>
        <item name="android:maxHeight">104dip</item>
        <item name="android:indeterminateDrawable">@anim/wb_loading_frame</item>
        <item name="android:minWidth">108dip</item>
        <item name="android:minHeight">104dip</item>
    </style>
</resources>
