<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ioniconview="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/drawer_width"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header_img"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/background_drawer_header">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/text_margin"
            android:layout_marginLeft="@dimen/text_margin"
            android:text="桐乡"
            android:textColor="@color/background"
            android:textSize="25dp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_img"
        android:background="@color/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_margin"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/drawer_item_controlcity"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/list_item_height"
                android:background="@drawable/view_click_state">

                <be.webelite.ion.IconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/text_margin"
                    android:textColor="@color/accent_color"
                    android:textSize="@dimen/drawer_icon_size"
                    ioniconview:name="ion_home" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_item_height"
                    android:layout_marginLeft="@dimen/drawer_icontext_left"
                    android:layout_marginRight="@dimen/text_margin"
                    android:gravity="center_vertical"
                    android:text="管理城市"
                    android:textColor="@color/accent_color"
                    android:textSize="@dimen/text_size_normal"

                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/drawer_item_setting"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/list_item_height"
                android:background="@drawable/view_click_state">

                <be.webelite.ion.IconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/text_margin"
                    android:textColor="@color/accent_color"
                    android:textSize="@dimen/drawer_icon_size"
                    ioniconview:name="ion_gear_b" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_item_height"
                    android:layout_marginLeft="@dimen/drawer_icontext_left"
                    android:layout_marginRight="@dimen/text_margin"
                    android:gravity="center_vertical"
                    android:text="设置"
                    android:textColor="@color/accent_color"
                    android:textSize="@dimen/text_size_normal"

                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/drawer_item_about"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/list_item_height"
                android:background="@drawable/view_click_state">

                <be.webelite.ion.IconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/text_margin"
                    android:textColor="@color/accent_color"
                    android:textSize="@dimen/drawer_icon_size"
                    ioniconview:name="ion_social_android" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_item_height"
                    android:layout_marginLeft="@dimen/drawer_icontext_left"
                    android:layout_marginRight="@dimen/text_margin"
                    android:gravity="center_vertical"
                    android:text="关于"
                    android:textColor="@color/accent_color"
                    android:textSize="@dimen/text_size_normal"

                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>

